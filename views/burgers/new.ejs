<%- include('../partials/header') %>

<form id="new-form" action="/burgers" method="POST">
  <label>Name:</label>
  <input type="text" name="name">
  <label>Bun:
    <select name="bun">
        <option value="Standard">Standard</option>
        <option value="Gluten-Free">Gluten-Free</option>
        <option value="Lettuce Wrap">Lettuce Wrap</option>
    </select>
  <label>Patty:
    <select name="patty">
        <option value="Beef">Beef</option>
        <option value="Chicken">Chicken</option>
        <option value="Veggie">Veggie</option>
        <option value="Black Bean">Black Bean</option>
        <option value="Impossible">Impossible</option>
    </select>
    <label>Temperature (if Beef):</label>
  <select name="temperature">
    <option value="N/A">N/A</option>
    <option value="Medium-Rare">Medium-Rare</option>
    <option value="Medium">Medium</option>
    <option value="Well-Done">Well-Done</option>
  </select>
  </label><br>
  <label>Cheese:</label>
  <select name="cheese">
    <option value="None">None</option>
    <option value="Cheddar">Cheddar</option>
    <option value="Swiss">Swiss</option>
    <option value="Pepper Jack">Pepper Jack</option>
    <option value="Bleu">Bleu</option>
    <option value="American">American</option>
</select>
  </label><br>
  <label>Sauce:</label>
  <input type="checkbox" name="Ketchup">Ketchup
  <input type="checkbox" name="Mustard">Mustard
  <input type="checkbox" name="Mayonaise">Mayonaise
  <input type="checkbox" name="Sriracha">Sriracha
  <input type="checkbox" name="Hot Sauce">Hot Sauce
  <input type="checkbox" name="BBQ">BBQ
  
  </label><br>

<label>Toppings:</label>
    <input type="checkbox" value="None">None
    <input type="checkbox" value="Lettuce">Lettuce
    <input type="checkbox" value="Tomatoes">Tomatoes
    <input type="checkbox" value="Raw Onions">Raw Onions
    <input type="checkbox" value="Grilled Onions">Grilled Onions
    <input type="checkbox" value="Pickles">Pickles
    <input type="checkbox" value="Bacon">Bacon
</select>

<br>

<label>Custom Ingredients:</label>
<select name="ingredients">

</select>

<input type="submit" value="Add Burger">
</form>
