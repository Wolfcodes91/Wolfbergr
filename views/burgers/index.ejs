<%- include('../partials/header') %>

<table id="list">
    <thead>
      <tr>  
        <th>Burger Name</th>
      </tr>
    </thead>
    <tbody>
      <% burgers.forEach(function(b) { %>
        <tr class="burger-user">
          <td ><img alt="avatar" src="<%= b.userAvatar %>"><%= b.userName %></td>
          <td><%= b.createdAt.toLocaleDateString() %></td>
          <td><%= b.name %></td>
          <td><a href="/burgers/<%= b._id %>">Details</a></td>
        <td>   
        <% if (user && user._id.equals(b.userId)) { %>
            <form action="/burgers/<%= b._id %>?_method=DELETE" method="POST">
              <button class="badgeButton" type="submit">Delete Burger</button>
            </form>
           <% } %>
        </td>
        </tr>  
        <% }); %>  
      </tbody>
    </table>


<%- include('../partials/footer') %>